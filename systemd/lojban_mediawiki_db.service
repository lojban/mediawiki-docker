[Unit]
Description=Database for mw.lojban.org

[Service]
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=lojban_mw_db
WorkingDirectory=/home/sampre_mw/mediawiki
ExecStart=/home/sampre_mw/mediawiki/run_database.sh
ExecStop=/home/sampre_mw/mediawiki/kill_database.sh
TimeoutStartSec=10min

[Install]
WantedBy=default.target
